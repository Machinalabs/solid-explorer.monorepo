{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-unused-variable": true,
    "indent": [
      true,
      "spaces"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "class-name": true,
    "semicolon": false,
    "no-submodule-imports": [
      true,
      "web3/types"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "eofline": true,
    "jsdoc-format": true,
    "member-access": false,
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "curly": true,
    "no-reference": true,
    "no-var-requires": false,
    "only-arrow-functions": false,
    "no-empty-interface": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "named-imports-order": "any"
      }
    ],
    "no-trailing-whitespace": true
  },
  "rulesDirectory": []
}